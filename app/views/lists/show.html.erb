<h1><%= @list.name %></h1>
<h2>Bookmarks</h2>

<ul>
  <% @list.bookmarks.each do|bookmark| %>
  <h3 class="mt-5"><%= bookmark.movie.title %></h3>
  <p><%= bookmark.movie.overview %></p>
  <%= image_tag bookmark.movie.poster_url, width: 300 %>
  <li class="list-group-item">
    <%= bookmark.comment %>
      <%= link_to "Remove",
                  bookmark_path(bookmark),
                  method: :delete,
                  data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>
  </li>
  <% end %>

  </div>
</div>

</ul>
<%= link_to "Back", lists_path, class: "btn btn-sm btn-primary" %>
<%= link_to "New Bookmark", new_list_bookmark_path(@list), class: "btn btn-sm btn-primary" %>
